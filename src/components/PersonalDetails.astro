---
import { render, getEntry } from "astro:content";
import LinkedIn from "../icons/LinkedIn.astro";

const { lang } = Astro.props;
const info = await getEntry("personal", `${lang}/info`);
const translations = await import(`../i18n/${lang}.json`);

const { Content } = await render(info);
---

<section id="personal">
  <div class="flex flex-col-reverse md:flex-row items-center gap-8 print:flex-row">
    <div class="flex-1">
      <h1>Eduardo SÃ¡nchez</h1>
      <h4>{info?.data.role}</h4>
      <a href="https://www.linkedin.com/in/eduardosanchezg/" target="_blank" rel="noopener noreferrer" class="no-underline items-center" style="color:#2f95dcd8">
        <!-- <LinkedIn class="inline size-5" /> -->
        linkedin.com/in/eduardosanchezg
      </a>
    </div>
    <img
      src="/profile.jpeg"
      alt="Profile Picture"
      class="rounded-full w-32 h-32 object-cover"
    />
  </div>
  <div>
    <h2>{translations.aboutMe}</h2>
    <div>
      <Content />
    </div>
  </div>
</section>
